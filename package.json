{
  "name": "suspense-element",
  "version": "0.2.0",
  "description": "A Web Component abstraction to declaratively render elements that depend on asynchronous processes",
  "license": "MIT",
  "author": "Joren Broekema <Joren.Broekema@gmail.com>",
  "main": "index.js",
  "files": [
    "*.d.ts",
    "custom-elements.json",
    "define.js",
    "src"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.types.json",
    "custom-elements-manifest": "custom-elements-manifest analyze --exclude \"demo/**/*\"",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.{html,js,json}\" --write --ignore-path .gitignore && prettier-package-json --write ./package.json",
    "postinstall": "npm run custom-elements-manifest",
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.{html,js,json}\" --check --ignore-path .gitignore && tsc",
    "prepare": "husky install",
    "release": "npm run build && changeset publish",
    "start": "wds --open --watch --app-index demo/index.html"
  },
  "devDependencies": {
    "@changesets/cli": "^2.16.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@custom-elements-manifest/analyzer": "^0.3.1",
    "@open-wc/eslint-config": "^4.3.0",
    "@web/dev-server": "^0.1.17",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "prettier-package-json": "^2.6.0",
    "typescript": "^4.3.4"
  },
  "keywords": [],
  "publishConfig": {
    "access": "public"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "exports": {
    ".": "./index.js",
    "./define": "./define.js"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": "prettier-package-json --write"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "always",
    "trailingComma": "all"
  }
}
