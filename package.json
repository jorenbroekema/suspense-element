{
  "name": "suspense-element",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "scripts": {
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.{html,js,json}\" --write --ignore-path .gitignore && prettier-package-json --write ./package.json",
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.{html,js,json}\" --check --ignore-path .gitignore",
    "prepare": "husky install",
    "start": "wds --open --watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@open-wc/eslint-config": "^4.3.0",
    "@web/dev-server": "^0.1.17",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "prettier-package-json": "^2.6.0"
  },
  "keywords": [],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": "prettier-package-json --write"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "always",
    "trailingComma": "all"
  }
}
